table
  width 100%
  background-color $black
  border 1px solid $grey-dark
  text-align left
  text-transform uppercase
  overflow hidden

  tbody
    tr:last-of-type
      border-bottom 0

  tr
    border-bottom 1px solid $grey-dark

    th
    td
      padding 10px 4%
      +above(l)
        padding 15px

      &.id
        width 10%
        text-align center

      &.mobile
        display none
        +above(l)
          display table-cell

    th
      padding 25px 2%
      font-size rem(14px)
      font-weight 500
      color $pink

    td
      padding 20px 2%
      font-size rem(12px)
      color $green-light

      &.actions

        svg
          width 15px
          height 15px
          margin 0 5px
          +above(l)
            width 20px
            height 20px

          &.edit
            color $yellow
          
          &.delete
            color $red