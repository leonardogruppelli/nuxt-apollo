.user
  height 100%
  display table
  position relative

  &__name
    display table-cell
    position relative
    padding 10px 20px
    color $grey-light
    white-space nowrap
    cursor pointer

    span
      margin-left 5px

  &__controls
    display none
    position absolute
    top 100%
    right 0
    background-color $black
    border 1px solid $grey-dark
    text-align right
    z-index 1

    li
      border-bottom 1px solid $grey-dark
      white-space nowrap

      &.info
        padding 15px 20px

      &:last-of-type
        border-bottom 0

      .btn
        padding 15px 20px
        background-color $black
        font-size rem(12px)
        text-align right

    &__info
    &__image
      display inline-block
      vertical-align top

    &__info
      p
        font-size rem(14px)
        color $purple

      span
        @extend .montserrat
        font-size rem(8px)
        color $golden
        text-transform uppercase

    &__image
      margin-left 10px

      img
        width 50px
        height 50px

  &:hover
    & ^[0]__controls
      display block

    & ^[0]__name
      background-color $black-light
      color $green-light