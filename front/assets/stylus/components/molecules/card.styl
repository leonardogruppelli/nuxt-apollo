.card
  width 100%
  display table
  padding 25px
  background-color $black
  border 1px solid $grey-dark

  &__icon
  &__content
    display table-cell

  &__icon
    width 25%

    svg
      width 100%
      height auto

  &__content
    padding-left 25px
    
    h1
      margin-bottom 5px
      font-size rem(20px)
      font-weight 300

    span
      font-size rem(46px)
      font-weight 400
      