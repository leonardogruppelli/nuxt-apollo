.header
  width 100%
  height 60px
  background-color $black
  border-bottom 1px solid $grey-dark
  +above(l)
    height 70px

  &__logo
  &__button
  &__breadcrumb
    height 100%
    float left

  &__logo
  &__button
    border-right 1px solid $grey-dark

  &__logo
    width 80px
    +above(l)
      width 100px

    .logo
      height 100%

  &__breadcrumb
    display none
    padding 0 20px
    +above(l)
      display table

    .breadcrumb
      display table-cell

  &__user
    height 100%
    float right
    border-left 1px solid $grey-dark