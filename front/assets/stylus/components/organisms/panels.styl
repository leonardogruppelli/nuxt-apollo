.panels
  width 100%
  clearfix()

  ul

    li
      stack()
      margin-bottom 2%

      &:nth-of-type(1)
        +above(m)
          column(1/2)
        +above(l)
          column(2/3)
        +above(xl)
          column(3/4)

      &:nth-of-type(2)
        +above(m)
          column(1/2)
        +above(l)
          column(1/3)
        +above(xl)
          column(1/4)