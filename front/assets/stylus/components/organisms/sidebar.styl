aside
  width 100px
  height calc(100vh - 80px)
  position absolute
  top 80px
  left 0
  background-color $black
  border-right 1px solid $grey-dark

  ul
    width 100%
    height 100%

    li
      text-align center

      a
        display block
        position relative
        padding 25px 0

        &:before
          content ''
          width 5px
          height 100%
          display none
          position absolute
          top 0
          left 0
          background-color $green

        svg
          width 35px
          height auto
          color $green-dark

        &.active
        &:hover
          background-color $black-light

          svg
            color $green

        &.active:before
          display block