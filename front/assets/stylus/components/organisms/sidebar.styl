aside
  width 100px
  height 100vh
  position absolute
  top 0
  left 0
  background-color $grey
  border-right 1px solid $grey-dark

  .logo
    height 60px

  ul
    width 100%
    height 100%
    border-top 1px solid $blue

    li
      text-align center

      a
        display block
        position relative
        padding 25px 0

        &:before
          content ''
          width 5px
          height 100%
          display none
          position absolute
          top 0
          left 0
          background-color $blue

        &.active
        &:hover
          background-color $white

        &.active:before
          display block

        svg
          width 35px
          height auto
          color $blue