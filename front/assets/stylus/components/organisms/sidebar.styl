.sidebar
  height calc(100vh - 60px)
  display none
  position absolute
  top 60px
  left 0
  background-color $black
  border-right 1px solid $grey-dark
  +above(l)
    width 100px
    height calc(100vh - 70px)
    top 70px

  &--active
    display block

  ul
    width 100%
    height 100%

    li
      text-align left
      white-space nowrap
      +above(l)
        text-align center

      a
        display block
        position relative
        padding 20px
        color $green

        &:before
          content ''
          width 5px
          height 100%
          display none
          position absolute
          top 0
          left 0
          background-color $green-light

        svg
          width 25px
          height auto
          +above(l)
            width 35px

        span
          display inline-block
          @extend .montserrat
          font-size rem(14px)
          text-transform uppercase
          +above(l)
            display none

          &:before
            content ''
            width 1px
            height 100%
            margin 0 20px
            border-left 1px solid

        &.active
        &:hover
          background-color $black-light
          color $green-light

        &.active:before
          display block