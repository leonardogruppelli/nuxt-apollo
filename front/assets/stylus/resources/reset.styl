*
*:before
*:after
  padding 0
  margin 0
  vertical-align middle
  background inherit
  border 0
  outline 0
  font inherit
  color inherit
  box-sizing border-box

article
aside
details
figcaption
figure
footer
header
hgroup
menu
nav
section 
  display block

html
body
  width 100%
  height 100%
  overflow hidden

body
  background-color $grey
  @extend .roboto
  font-weight 300

a
button
  user-select none

a
  text-decoration none

ol
ul 
  list-style none

blockquote
q 
  quotes none

blockquote 
  &:before
  &:after
    content ''
    content none

q 
  &:before
  &:after 
    content ''
    content none

table 
  border-collapse collapse
  border-spacing 0

::placeholder
  color $grey-light