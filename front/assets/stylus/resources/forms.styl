form
  clearfix()

  .control
    stack()
    margin-bottom 40px
    color $blue

    &--half
      +above(m)
        unstack()
        column(1/2, $cycle: 2)

    &--third
      +above(m)
        unstack()
        column(1/3, $cycle: 3)

    &--error
      color $red

    &--success
      color $green

    label
      display block
      @extend .montserrat
      font-size rem(12px)
      font-weight 300
      color inherit
      text-transform uppercase

    &__input
      width 100%
      position relative
      border-bottom 2px solid

      input
        width 100%
        padding 10px 0
        background-color transparent
        border 0
        outline 0
        @extend .montserrat
        font-size rem(14px)
        color inherit

    span
      display block
      margin-top 10px
      font-size rem(12px)
      color $red